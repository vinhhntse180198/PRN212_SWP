<Window x:Class="ADNTesting.ResultFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo Kết quả Xét nghiệm" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" x:Name="txtTitle" 
                   Text="Tạo Kết quả Xét nghiệm" FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Appointment Info -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Thông tin lịch hẹn:" 
                   VerticalAlignment="Top" Margin="0,0,10,0" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
            <TextBlock x:Name="txtAppointmentInfo" Text=""/>
        </StackPanel>

        <!-- Result Date -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Ngày kết quả:" 
                   VerticalAlignment="Center" Margin="0,0,10,0"/>
        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="dpResultDate" 
                    Margin="0,5,0,5"/>

        <!-- Result Data -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Dữ liệu kết quả:" 
                   VerticalAlignment="Top" Margin="0,0,10,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtResultData" 
                 Margin="0,5,0,5" TextWrapping="Wrap" AcceptsReturn="True" 
                 Height="80" VerticalScrollBarVisibility="Auto"/>

        <!-- Result File -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="File kết quả:" 
                   VerticalAlignment="Center" Margin="0,0,10,0"/>
        <Grid Grid.Row="4" Grid.Column="1" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="txtResultFile" IsReadOnly="True"/>
            <Button Grid.Column="1" x:Name="btnBrowseFile" Content="Chọn file" 
                    Width="80" Margin="5,0,0,0" Click="btnBrowseFile_Click"/>
        </Grid>

        <!-- Note -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Ghi chú:" 
                   VerticalAlignment="Top" Margin="0,0,10,0"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtNote" 
                 Margin="0,5,0,5" TextWrapping="Wrap" AcceptsReturn="True" 
                 Height="60" VerticalScrollBarVisibility="Auto"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Lưu" Width="80" 
                    Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Hủy" Width="80" 
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 