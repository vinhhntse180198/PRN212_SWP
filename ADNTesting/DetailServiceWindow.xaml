<Window x:Class="ADNTesting.DetailServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="DetailServiceWindow" Height="450" Width="800" Loaded="Window_Loaded"
        Background="#f0f4f8">
    <Grid>
        <Label Content="ServiceName" HorizontalAlignment="Left" Height="28" Margin="51,156,0,0" VerticalAlignment="Top" Width="96" Foreground="#2c3e50"/>
        <TextBox x:Name="txtServiceName" HorizontalAlignment="Left" Margin="170,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" TabIndex="0" Height="28"
                 Background="White" BorderBrush="#bdc3c7"/>

        <Label Content="Description" HorizontalAlignment="Left" Height="28" Margin="51,0,0,0" VerticalAlignment="Center" Width="76" Foreground="#2c3e50"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Margin="170,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="268" TabIndex="1" Height="28"
                 Background="White" BorderBrush="#bdc3c7"/>

        <Label Content="Price" HorizontalAlignment="Left" Height="28" Margin="51,256,0,0" VerticalAlignment="Top" Width="76" Foreground="#2c3e50"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Margin="170,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" TabIndex="2" Height="28"
                 Background="White" BorderBrush="#bdc3c7"/>

        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="608,153,0,0" VerticalAlignment="Top" Width="145" TabIndex="8" Height="43"
                Background="#3498db" Foreground="White" FontWeight="Bold" BorderBrush="#2980b9" Click="btnSave_Click"/>

        <Button x:Name="btnQuit" Content="Quit" HorizontalAlignment="Left" Margin="608,244,0,0" VerticalAlignment="Top" Width="145" TabIndex="9" Height="43"
                Background="#e74c3c" Foreground="White" FontWeight="Bold" BorderBrush="#c0392b" Click="btnQuit_Click"/>

        <Label x:Name="lbl" Content="Create | Update Service" HorizontalAlignment="Left" Height="50" Margin="127,31,0,0" VerticalAlignment="Top" Width="311"
               FontSize="18" FontWeight="SemiBold" Foreground="#2c3e50"/>
    </Grid>
</Window>
