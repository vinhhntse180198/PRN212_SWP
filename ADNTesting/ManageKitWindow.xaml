<Window x:Class="ADNTesting.ManageKitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="Quản lý Kit xét nghiệm" Height="550" Width="900" Loaded="Window_Loaded"
        Background="#F9FAFB">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Quản lý Kit xét nghiệm" FontSize="24" FontWeight="Bold"
                   Foreground="#1F2937" Margin="20,20,0,20" HorizontalAlignment="Center" Grid.Row="0"/>

        <!-- Tìm kiếm và lọc -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtSearch" Grid.Column="0" Height="30" Margin="0,0,10,0"
                     VerticalContentAlignment="Center" Padding="5,0" Background="White" BorderBrush="#D1D5DB" Foreground="#111827"/>

            <Button x:Name="btnSearch" Grid.Column="1" Content="Tìm kiếm" Height="30" Width="100" Margin="0,0,10,0"
                    Background="#2563EB" Foreground="White" BorderThickness="0" FontWeight="Bold" />

            <ComboBox x:Name="cbxServiceFilter" Grid.Column="2" Height="30" Width="150" Margin="0,0,10,0"
                      DisplayMemberPath="ServiceName" SelectedValuePath="ServiceId"
                      Background="White" BorderBrush="#D1D5DB" Foreground="#111827"
                      SelectionChanged="cbxServiceFilter_SelectionChanged"/>

            <Button x:Name="btnRefresh" Grid.Column="3" Content="Làm mới" Height="30" Width="100"
                    Background="#6B7280" Foreground="White" BorderThickness="0" FontWeight="Bold"
                    Click="btnRefresh_Click"/>
        </Grid>

        <!-- Danh sách Kit -->
        <DataGrid x:Name="dgvKits" Grid.Row="2" Margin="20,0,20,20" AutoGenerateColumns="False"
                  CanUserAddRows="False" SelectionMode="Single" SelectionChanged="dgvKits_SelectionChanged"
                  Background="White" AlternatingRowBackground="#F3F4F6"
                  GridLinesVisibility="Horizontal" BorderBrush="#D1D5DB" BorderThickness="1"
                  Foreground="#111827" FontSize="14" RowHeaderWidth="0">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#374151"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding KitComponentId}" Width="50"/>
                <DataGridTextColumn Header="Tên Kit" Binding="{Binding ComponentName}" Width="*"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Introduction}" Width="*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Dịch vụ" Binding="{Binding Service.ServiceName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Các nút chức năng -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,20,20">
            <Button x:Name="btnCreate" Content="Tạo mới" Height="40" Width="100" Margin="10,0"
                    Background="#10B981" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="btnCreate_Click"/>
            <Button x:Name="btnUpdate" Content="Cập nhật" Height="40" Width="100" Margin="10,0"
                    Background="#3B82F6" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="btnUpdate_Click"/>
            <Button x:Name="btnDelete" Content="Xóa" Height="40" Width="100" Margin="10,0"
                    Background="#EF4444" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="btnDelete_Click"/>
            <Button x:Name="btnClose" Content="Đóng" Height="40" Width="100" Margin="10,0"
                    Background="#6B7280" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
