<Window x:Class="ADNTesting.KitDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="Chi tiết Kit xét nghiệm" Height="450" Width="600" 
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"
        Background="#f9f9fb">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock x:Name="txtTitle" Text="Thêm mới Kit xét nghiệm" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,20" HorizontalAlignment="Center" 
                   Grid.Row="0" Foreground="#2c3e50"/>

        <!-- Thông tin chi tiết Kit -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,10" Foreground="#333"/>
            <TextBox x:Name="txtKitId" Grid.Row="0" Grid.Column="1" Height="30" Margin="0,10" IsEnabled="False"
                     Background="White" BorderBrush="#ccc" Foreground="#2c3e50"/>

            <Label Content="Tên Kit:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10" Foreground="#333"/>
            <TextBox x:Name="txtKitName" Grid.Row="1" Grid.Column="1" Height="30" Margin="0,10"
                     Background="White" BorderBrush="#ccc" Foreground="#2c3e50"/>

            <Label Content="Mô tả:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="0,10" Foreground="#333"/>
            <TextBox x:Name="txtDescription" Grid.Row="2" Grid.Column="1" Height="60" Margin="0,10" TextWrapping="Wrap" AcceptsReturn="True"
                     Background="White" BorderBrush="#ccc" Foreground="#2c3e50"/>

            <Label Content="Số lượng:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,10" Foreground="#333"/>
            <TextBox x:Name="txtQuantity" Grid.Row="3" Grid.Column="1" Height="30" Margin="0,10"
                     Background="White" BorderBrush="#ccc" Foreground="#2c3e50"/>

            <Label Content="Dịch vụ:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,10" Foreground="#333"/>
            <ComboBox x:Name="cbxService" Grid.Row="4" Grid.Column="1" Height="30" Margin="0,10"
                      Background="White" BorderBrush="#ccc" Foreground="#2c3e50"
                      DisplayMemberPath="ServiceName" SelectedValuePath="ServiceId"/>

            <Label Content="Loại mẫu:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Top" Margin="0,10" Foreground="#333"/>
            <ListBox x:Name="lbSampleTypes" Grid.Row="5" Grid.Column="1" Margin="0,10"
                     Background="White" BorderBrush="#ccc" Foreground="#2c3e50"
                     DisplayMemberPath="Name"/>
        </Grid>

        <!-- Các nút chức năng -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Lưu" Height="40" Width="100" Margin="10,0"
                    Background="#3498db" Foreground="White" FontWeight="Bold"
                    BorderBrush="#2980b9" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Hủy" Height="40" Width="100" Margin="10,0"
                    Background="#e74c3c" Foreground="White" FontWeight="Bold"
                    BorderBrush="#c0392b" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
