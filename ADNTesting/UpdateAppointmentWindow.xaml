<Window x:Class="ADNTesting.UpdateAppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="Cập nhật trạng thái và kết quả" Height="550" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Cập nhật thông tin lịch hẹn" HorizontalAlignment="Left" Height="60" Margin="200,10,0,0" VerticalAlignment="Top" Width="400" FontSize="30" HorizontalContentAlignment="Center"/>
        
        <GroupBox Header="Thông tin lịch hẹn" HorizontalAlignment="Left" Height="180" Margin="50,80,0,0" VerticalAlignment="Top" Width="700">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <Label Content="Mã đơn:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtAppointmentId" Grid.Row="0" Grid.Column="1" Margin="5" IsEnabled="False"/>
                
                <Label Content="Họ và tên:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFullName" Grid.Row="0" Grid.Column="3" Margin="5" IsEnabled="False"/>
                
                <Label Content="Email:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Margin="5" IsEnabled="False"/>
                
                <Label Content="Số điện thoại:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPhone" Grid.Row="1" Grid.Column="3" Margin="5" IsEnabled="False"/>
                
                <Label Content="Dịch vụ:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtService" Grid.Row="2" Grid.Column="1" Margin="5" IsEnabled="False"/>
                
                <Label Content="Ngày hẹn:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
                <TextBox x:Name="txtAppointmentDate" Grid.Row="2" Grid.Column="3" Margin="5" IsEnabled="False"/>
                
                <Label Content="Địa điểm:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLocation" Grid.Row="3" Grid.Column="1" Margin="5" IsEnabled="False"/>
            </Grid>
        </GroupBox>
        
        <GroupBox Header="Cập nhật trạng thái và kết quả" HorizontalAlignment="Left" Height="200" Margin="50,280,0,0" VerticalAlignment="Top" Width="700">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Label Content="Trạng thái:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbxStatus" Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center">
                    <ComboBoxItem Content="Pending"/>
                    <ComboBoxItem Content="Confirmed"/>
                    <ComboBoxItem Content="In Progress"/>
                    <ComboBoxItem Content="Completed"/>
                    <ComboBoxItem Content="Cancelled"/>
                </ComboBox>
                
                <Label Content="Tệp kết quả:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtResultFile" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <Button x:Name="btnBrowse" Content="Chọn tệp" Grid.Column="1" Margin="5" VerticalAlignment="Center" Click="btnBrowse_Click"/>
                </Grid>
                
                <Label Content="Dữ liệu kết quả:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="0,10,0,0"/>
                <TextBox x:Name="txtResultData" Grid.Row="2" Grid.Column="1" Margin="5" TextWrapping="Wrap" AcceptsReturn="True"/>
            </Grid>
        </GroupBox>
        
        <Button x:Name="btnSave" Content="Lưu" HorizontalAlignment="Left" Height="35" Margin="300,490,0,0" VerticalAlignment="Top" Width="100" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Hủy" HorizontalAlignment="Left" Height="35" Margin="420,490,0,0" VerticalAlignment="Top" Width="100" Click="BtnCancel_Click"/>
    </Grid>
</Window> 