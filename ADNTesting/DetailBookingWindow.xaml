<Window x:Class="ADNTesting.DetailBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="DetailBookingWindow" Height="500" Width="800" Loaded="Window_Loaded"
        Background="#f4faff">
    <Window.Resources>
        <!-- Style cho Label -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#244266"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <!-- Style cho TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#e9f2fb"/>
            <Setter Property="Foreground" Value="#1e3553"/>
            <Setter Property="BorderBrush" Value="#3399ff"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <!-- Style cho ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#e9f2fb"/>
            <Setter Property="Foreground" Value="#1e3553"/>
            <Setter Property="BorderBrush" Value="#3399ff"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <!-- Style cho DatePicker -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#e9f2fb"/>
            <Setter Property="Foreground" Value="#1e3553"/>
            <Setter Property="BorderBrush" Value="#3399ff"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <!-- Style cho Button Đăng kí -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3399ff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#2676c8"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2676c8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Style cho Button Quay lại -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#f44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#b71c1c"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#b71c1c"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Label Content="Đăng kí lịch hẹn" HorizontalAlignment="Left" Height="44" Margin="300,10,0,0" VerticalAlignment="Top" Width="254" FontSize="30" Foreground="#1f3c5a" FontWeight="Bold"/>
        <Label Content="Họ và tên" HorizontalAlignment="Left" Height="34" Margin="24,72,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="txtFullName" HorizontalAlignment="Left" Height="34" Margin="148,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" TabIndex="1"/>
        <Label Content="Ngày sinh" HorizontalAlignment="Left" Height="34" Margin="24,131,0,0" VerticalAlignment="Top" Width="89"/>
        <DatePicker x:Name="dpDob" HorizontalAlignment="Left" Height="34" Margin="148,131,0,0" VerticalAlignment="Top" Width="118" TabIndex="2"/>
        <Label Content="Số điện thoại" HorizontalAlignment="Left" Height="34" Margin="24,183,0,0" VerticalAlignment="Top" Width="119"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Height="34" Margin="148,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" TabIndex="3"/>
        <Label Content="Email" HorizontalAlignment="Left" Height="34" Margin="24,238,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="34" Margin="148,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" TabIndex="4"/>
        <Label Content="Tỉnh/Thành Phố" HorizontalAlignment="Left" Height="34" Margin="24,292,0,0" VerticalAlignment="Top" Width="119"/>
        <ComboBox x:Name="cbxProvince" HorizontalAlignment="Left" Height="34" Margin="148,292,0,0" VerticalAlignment="Top" Width="169" TabIndex="5"/>
        <Label Content="Quận/Huyện" HorizontalAlignment="Left" Height="34" Margin="24,347,0,0" VerticalAlignment="Top" Width="105"/>
        <ComboBox x:Name="cbxDistrict" HorizontalAlignment="Left" Height="34" Margin="148,347,0,0" VerticalAlignment="Top" Width="169" TabIndex="6"/>
        <Label Content="Mục đích xét nghiệm" HorizontalAlignment="Left" Height="34" Margin="24,402,0,0" VerticalAlignment="Top" Width="122"/>
        <ComboBox x:Name="cbxTestPurpose" HorizontalAlignment="Left" Height="34" Margin="172,402,0,0" VerticalAlignment="Top" Width="120" TabIndex="7"/>
        <Label Content="Loại dịch vụ" HorizontalAlignment="Left" Height="34" Margin="357,76,0,0" VerticalAlignment="Top" Width="122"/>
        <ComboBox x:Name="cbxServiceType" HorizontalAlignment="Left" Height="34" Margin="495,76,0,0" VerticalAlignment="Top" Width="120" TabIndex="8" SelectionChanged="cbxServiceType_SelectionChanged_1"/>
        <Label Content="Ngày hẹn" HorizontalAlignment="Left" Height="34" Margin="359,128,0,0" VerticalAlignment="Top" Width="88"/>
        <DatePicker x:Name="dpAppointmentDate" HorizontalAlignment="Left" Height="34" Margin="495,128,0,0" VerticalAlignment="Top" Width="118" TabIndex="9"/>
        <Label Content="Giờ lấy mẫu" HorizontalAlignment="Left" Height="34" Margin="361,183,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="txtCollectionTime" HorizontalAlignment="Left" Height="34" Margin="495,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TabIndex="10"/>
        <Label Content="Loại xét nghiệm" HorizontalAlignment="Left" Height="34" Margin="361,237,0,0" VerticalAlignment="Top" Width="129"/>
        <ComboBox x:Name="cbxTestCategory" HorizontalAlignment="Left" Height="34" Margin="495,239,0,0" VerticalAlignment="Top" Width="120" TabIndex="11"/>
        <Label Content="Địa điểm lấy mẫu" HorizontalAlignment="Left" Height="34" Margin="361,290,0,0" VerticalAlignment="Top" Width="109"/>
        <ComboBox x:Name="cbxTestAddress" HorizontalAlignment="Left" Height="34" Margin="495,292,0,0" VerticalAlignment="Top" Width="120" TabIndex="12"/>
        <Label Content="Bộ kit xét nghiệm" HorizontalAlignment="Left" Height="34" Margin="361,345,0,0" VerticalAlignment="Top" Width="134"/>
        <ComboBox x:Name="cbxKitComponent" HorizontalAlignment="Left" Height="34" Margin="495,347,0,0" VerticalAlignment="Top" Width="120" TabIndex="13" SelectionChanged="CbxKitComponent_SelectionChanged"/>
        <Label Content="Loại mẫu" HorizontalAlignment="Left" Height="34" Margin="361,402,0,0" VerticalAlignment="Top" Width="90"/>
        <Button x:Name="btnBooking" Content="Đăng kí" HorizontalAlignment="Left" Height="38" Margin="674,162,0,0" VerticalAlignment="Top" Width="105" Click="BtnBooking_Click" Style="{StaticResource PrimaryButtonStyle}"/>
        <Button x:Name="btnCancel" Content="Quay lại" HorizontalAlignment="Left" Height="38" Margin="674,255,0,0" VerticalAlignment="Top" Width="105" Click="BtnCancel_Click" Style="{StaticResource CancelButtonStyle}"/>
        <ComboBox x:Name="cbxSampleType" HorizontalAlignment="Left" Height="34" Margin="495,402,0,0" VerticalAlignment="Top" Width="120" TabIndex="14"/>
    </Grid>
</Window>