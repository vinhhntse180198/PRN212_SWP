<Window x:Class="ADNTesting.ManageFeedback"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="Quản lý Feedback" Height="450" Width="800"
        Background="#F4F6F8">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgvFeedback"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False"
              Grid.Row="0"
              Background="White"
              AlternatingRowBackground="#F0F0F0"
              GridLinesVisibility="Horizontal"
              BorderBrush="#D1D5DB"
              BorderThickness="1"
              HeadersVisibility="Column"
              Foreground="#333"
              FontSize="14"
              RowHeaderWidth="0">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#374151"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Khách hàng" Binding="{Binding User.FullName}" Width="120"/>
                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="80"/>
                <DataGridTextColumn Header="Ngày" Binding="{Binding FeedbackDate}" Width="150"/>
                <DataGridTextColumn Header="Nội dung" Binding="{Binding Content}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnCreateFeedback" Content="Tạo feedback" Width="120" Margin="0,0,10,0" Click="btnCreateFeedback_Click"
                    Background="#2563EB" Foreground="White" FontWeight="Bold" Padding="6,2" BorderThickness="0" />
            <Button x:Name="btnBack" Content="Quay lại" Width="100" Click="btnBack_Click"
                    Background="#6B7280" Foreground="White" FontWeight="Bold" Padding="6,2" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
