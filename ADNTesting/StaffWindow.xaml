<Window x:Class="ADNTesting.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="Hệ thống quản lý xét nghiệm ADN - Nhân viên" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF0F8FF" Offset="0"/>
                <GradientStop Color="#FFE6F3FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <TextBlock Text="Hệ thống quản lý xét nghiệm ADN" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtWelcome" Text="Xin chào, Nhân viên" FontSize="18" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>

        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
            <Button x:Name="btnAppointments" Width="200" Height="120" Margin="20" Click="btnAppointments_Click">
                <StackPanel>
                    <TextBlock Text="Quản lý lịch hẹn" FontSize="16" HorizontalAlignment="Center" Margin="0,40,0,0"/>
                </StackPanel>
            </Button>
            
            <Button x:Name="btnCreateResults" Width="200" Height="120" Margin="20" Click="btnCreateResults_Click">
                <StackPanel>
                    <TextBlock Text="Tạo kết quả" FontSize="16" HorizontalAlignment="Center" Margin="0,40,0,0"/>
                </StackPanel>
            </Button>
            
            <Button x:Name="btnKits" Width="200" Height="120" Margin="20" Click="btnKits_Click">
                <StackPanel>
                    <TextBlock Text="Quản lý Kit" FontSize="16" HorizontalAlignment="Center" Margin="0,40,0,0"/>
                </StackPanel>
            </Button>
        </WrapPanel>
        
        <Button x:Name="btnQuit" Content="Đăng xuất" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,0,20,20" Click="btnQuit_Click"/>
    </Grid>
</Window> 