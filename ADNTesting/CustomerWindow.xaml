<Window x:Class="ADNTesting.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800"
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">
    <Grid>
        <Label x:Name="lbl" Content="Hello Customer, Welcome back"
               HorizontalAlignment="Left" Height="37" Margin="28,10,0,0"
               VerticalAlignment="Top" Width="300" FontSize="14"
               Foreground="#2c3e50" FontWeight="SemiBold"/>

        <Button x:Name="Register" Content="Dịch vụ"
                HorizontalAlignment="Left" Height="36" Margin="123,64,0,0"
                VerticalAlignment="Top" Width="96" Click="Register_Click"
                Background="#3498db" Foreground="White" FontWeight="Bold"
                BorderBrush="#2980b9"/>

        <Button x:Name="btBooking" Content="Đăng kí"
                HorizontalAlignment="Left" Height="36" Margin="273,64,0,0"
                VerticalAlignment="Top" Width="96" Click="btBooking_Click"
                Background="#27ae60" Foreground="White" FontWeight="Bold"
                BorderBrush="#1e8449"/>

        <Button x:Name="btnTrackingOrder" Content="Theo dõi đơn"
                HorizontalAlignment="Left" Height="36" Margin="420,64,0,0"
                VerticalAlignment="Top" Width="96" Click="btnTrackingOrder_Click"
                Background="#f39c12" Foreground="White" FontWeight="Bold"
                BorderBrush="#d68910"/>

        <Button x:Name="Quit" Content="Quit"
                HorizontalAlignment="Left" Height="36" Margin="581,64,0,0"
                VerticalAlignment="Top" Width="115" Click="Quit_Click"
                Background="#e74c3c" Foreground="White" FontWeight="Bold"
                BorderBrush="#c0392b"/>
    </Grid>
</Window>
