<Window x:Class="ADNTesting.ManageSampleTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Loại Mẫu" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Quản lý Loại Mẫu" FontSize="20" FontWeight="Bold"
                   Foreground="#1F2937" Margin="0,0,0,20"/>

        <!-- Search and Add -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtSearch" Grid.Column="0" Margin="0,0,10,0"
                     Background="White" BorderBrush="#D1D5DB" Foreground="#111827"
                     Padding="4" TextChanged="txtSearch_TextChanged"/>

            <Button x:Name="btnAdd" Grid.Column="1" Content="Thêm mới" Width="100" Margin="0,0,10,0"
                    Background="#10B981" Foreground="White" FontWeight="Bold" BorderThickness="0"
                    Click="btnAdd_Click"/>

            <Button x:Name="btnRefresh" Grid.Column="2" Content="Làm mới" Width="100"
                    Background="#6B7280" Foreground="White" FontWeight="Bold" BorderThickness="0"
                    Click="btnRefresh_Click"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid x:Name="dgSampleTypes" Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionChanged="dgSampleTypes_SelectionChanged"
                  Background="White"
                  AlternatingRowBackground="#F3F4F6"
                  GridLinesVisibility="Horizontal"
                  BorderBrush="#D1D5DB"
                  BorderThickness="1"
                  Foreground="#111827"
                  FontSize="14"
                  RowHeaderWidth="0">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#374151"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Tên loại mẫu" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="250"/>
                <DataGridTextColumn Header="Kit Component" Binding="{Binding KitComponent.ComponentName}" Width="150"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding IsActive}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnEdit" Content="Sửa" Width="80" Margin="0,0,10,0"
                    Background="#3B82F6" Foreground="White" BorderThickness="0" FontWeight="Bold"
                    Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Xóa" Width="80" Margin="0,0,10,0"
                    Background="#EF4444" Foreground="White" BorderThickness="0" FontWeight="Bold"
                    Click="btnDelete_Click"/>
            <Button x:Name="btnClose" Content="Đóng" Width="80"
                    Background="#6B7280" Foreground="White" BorderThickness="0" FontWeight="Bold"
                    Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
