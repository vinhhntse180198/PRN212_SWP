<Window x:Class="ADNTesting.CreateResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo Kết quả Xét nghiệm" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Tạo Kết quả Xét nghiệm" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Search -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="txtSearch" Grid.Column="0" Margin="0,0,10,0" 
                     TextChanged="txtSearch_TextChanged"/>
            <Button x:Name="btnRefresh" Grid.Column="1" Content="Làm mới" 
                    Width="100" Click="btnRefresh_Click"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid x:Name="dgAppointments" Grid.Row="2" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionChanged="dgAppointments_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding AppointmentId}" Width="50"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Ngày hẹn" Binding="{Binding AppointmentDate}" Width="100"/>
                <DataGridTextColumn Header="Dịch vụ" Binding="{Binding Service.ServiceName}" Width="150"/>
                <DataGridTextColumn Header="Trạng thái kết quả" Binding="{Binding ResultStatus}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnCreateResult" Content="Tạo kết quả" Width="120" Margin="0,0,10,0" Click="btnCreateResult_Click"/>
            <Button x:Name="btnClose" Content="Đóng" Width="80" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window> 