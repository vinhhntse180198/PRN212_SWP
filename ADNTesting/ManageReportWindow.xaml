<Window x:Class="ADNTesting.ManageReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="Thống kê xét nghiệm ADN"
        Height="450" Width="900"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Title and Return Button -->
        <TextBlock Text="Thống kê xét nghiệm ADN"
                   FontWeight="Bold" FontSize="16" Foreground="#1F2937"
                   Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="10,8,0,0"/>
        <Button Content="Thoát"
                Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Left"
                Margin="0,30,0,0" Width="80"
                Background="#6B7280" Foreground="White" BorderThickness="0"
                Click="Button_Click"/>

        <!-- Date Range and Search -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="0,30,0,0">
            <TextBlock Text="Từ ngày" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#111827"/>
            <DatePicker x:Name="StartDatePicker" Width="108" Margin="0,0,10,0" Background="White" BorderBrush="#D1D5DB" Foreground="#111827"/>
            <TextBlock Text="Đến ngày" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#111827"/>
            <DatePicker x:Name="EndDatePicker" Width="103" Margin="0,0,10,0" Background="White" BorderBrush="#D1D5DB" Foreground="#111827"/>
            <Button Content="Tìm kiếm" Click="Search_Click" Width="80"
                    Background="#2563EB" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
        </StackPanel>

        <!-- Summary Info -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,20,0,10">
            <TextBlock Text="Tổng số xét nghiệm:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#111827"/>
            <TextBox x:Name="TotalTestCountTextBox" Width="80" IsReadOnly="True" Margin="0,0,20,0" Background="White" BorderBrush="#D1D5DB" Foreground="#111827"/>
            <TextBlock Text="Tổng doanh thu:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#111827"/>
            <TextBox x:Name="TotalRevenueTextBox" Width="100" IsReadOnly="True" Margin="0,0,20,0" Background="White" BorderBrush="#D1D5DB" Foreground="#111827"/>
            <TextBlock Text="Tổng số khách hàng:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#111827"/>
            <TextBox x:Name="TotalCustomerCountTextBox" Width="80" IsReadOnly="True" Margin="0,0,20,0" Background="White" BorderBrush="#D1D5DB" Foreground="#111827"/>
            <TextBlock Text="Tổng số mẫu:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#111827"/>
            <TextBox x:Name="TotalSampleCountTextBox" Width="80" IsReadOnly="True" Background="White" BorderBrush="#D1D5DB" Foreground="#111827"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="ReportDataGrid"
                  Grid.Row="2" Grid.ColumnSpan="2"
                  AutoGenerateColumns="False"
                  Height="300"
                  Background="White"
                  AlternatingRowBackground="#F9FAFB"
                  BorderBrush="#D1D5DB" BorderThickness="1"
                  GridLinesVisibility="Horizontal"
                  Foreground="#111827"
                  FontSize="14"
                  RowHeaderWidth="0">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#374151"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ngày hẹn" Binding="{Binding SampleReceivedDate}" Width="*"/>
                <DataGridTextColumn Header="Khách hàng" Binding="{Binding CustomerName}" Width="*"/>
                <DataGridTextColumn Header="Loại xét nghiệm" Binding="{Binding TestType}" Width="*"/>
                <DataGridTextColumn Header="Số lượng mẫu" Binding="{Binding SampleCount}" Width="*"/>
                <DataGridTextColumn Header="Giá tiền" Binding="{Binding TotalPrice}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
