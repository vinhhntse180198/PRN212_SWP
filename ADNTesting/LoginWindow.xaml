<Window x:Class="ADNTesting.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f2f5">
    <Grid>
        <Border CornerRadius="15" Background="White" Margin="24,26,10,26" Padding="30" >
            <Grid>
                <Label Content="LOGIN" HorizontalAlignment="Center" FontSize="35" FontWeight="Bold" Foreground="#2c3e50"/>

                <Label Content="Tên đăng nhập" HorizontalAlignment="Left" Margin="40,80,0,0" VerticalAlignment="Top" FontSize="15" Foreground="#34495e"/>
                <TextBox x:Name="txtUsername" Height="35" Margin="180,80,40,0" VerticalAlignment="Top" Padding="5" FontSize="14" Background="#ecf0f1" BorderBrush="#bdc3c7"/>

                <Label Content="Mật khẩu" HorizontalAlignment="Left" Margin="40,140,0,0" VerticalAlignment="Top" FontSize="15" Foreground="#34495e"/>
                <PasswordBox x:Name="pbPassword" Height="35" Margin="180,140,40,0" VerticalAlignment="Top" Padding="5" FontSize="14" Background="#ecf0f1" BorderBrush="#bdc3c7"/>

                <Button x:Name="btnLogin" Content="Đăng nhập" Margin="180,195,0,0" HorizontalAlignment="Left" Width="150" Height="40" VerticalAlignment="Top" Background="#3498db" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnLogin_Click"/>
                <Button x:Name="btnQuit" Content="Thoát" Margin="495,195,0,0" HorizontalAlignment="Left" Width="150" Height="40" VerticalAlignment="Top" Background="#e74c3c" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnQuit_Click"/>
                <Button x:Name="btnRegisterNow" Content="Đăng kí ngay" HorizontalAlignment="Left" Width="180" Height="40" Margin="294,258,0,0" VerticalAlignment="Top" Background="#2ecc71" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnRegister_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
