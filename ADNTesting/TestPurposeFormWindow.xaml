<Window x:Class="ADNTesting.TestPurposeFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm/Sửa Mục đích Xét nghiệm" Height="300" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" x:Name="txtTitle" 
                   Text="Thêm Mục đích Xét nghiệm Mới" FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Test Purpose Name -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Tên mục đích:" 
                   VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtTestPurposeName" 
                 Margin="0,5,0,5"/>

        <!-- Test Purpose Description -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Mô tả:" 
                   VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtTestPurposeDescription" 
                 Margin="0,5,0,5" TextWrapping="Wrap" AcceptsReturn="True" 
                 Height="60" VerticalScrollBarVisibility="Auto"/>

        <!-- Is Active -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Trạng thái:" 
                   VerticalAlignment="Center" Margin="0,0,10,0"/>
        <CheckBox Grid.Row="3" Grid.Column="1" x:Name="chkIsActive" 
                  Content="Hoạt động" VerticalAlignment="Center" 
                  Margin="0,5,0,5" IsChecked="True"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button x:Name="btnSave" Content="Lưu" Width="80" 
                    Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Hủy" Width="80" 
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 