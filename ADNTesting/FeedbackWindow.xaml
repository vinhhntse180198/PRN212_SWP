<Window x:Class="ADNTesting.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="FeedbackWindow" Height="450" Width="800"
        Background="#f1f5fb">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Rating -->
        <TextBlock Text="Rating:" Grid.Row="0" Grid.Column="0" 
                   VerticalAlignment="Center" Margin="0,0,10,10"
                   Foreground="#2d415a"
                   FontWeight="Bold"
                   FontSize="16"/>
        <ComboBox x:Name="cbxRating" Grid.Row="0" Grid.Column="1" Width="60" Margin="0,0,580,10"
                  Background="#e0e7ef"
                  BorderBrush="#3399ff"
                  Foreground="#2d415a"
                  FontWeight="Bold"
                  FontSize="15"
                  Padding="3">
            <ComboBox.ItemsSource>
                <x:Array Type="sys:Int32" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <sys:Int32>1</sys:Int32>
                    <sys:Int32>2</sys:Int32>
                    <sys:Int32>3</sys:Int32>
                    <sys:Int32>4</sys:Int32>
                    <sys:Int32>5</sys:Int32>
                </x:Array>
            </ComboBox.ItemsSource>
        </ComboBox>

        <!-- Content -->
        <TextBlock Text="Nội dung:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,10,10"
                   Foreground="#2d415a"
                   FontWeight="Bold"
                   FontSize="16"/>
        <TextBox x:Name="txtContent" Grid.Row="1" Grid.Column="1" Margin="0,0,0,187" TextWrapping="Wrap" AcceptsReturn="True" Grid.RowSpan="2"
                 Background="#e0e7ef"
                 Foreground="#1b2e49"
                 FontSize="15"
                 BorderBrush="#3399ff"
                 Padding="8"
                 VerticalScrollBarVisibility="Auto"
                 />

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSubmit" Content="Gửi" Width="80" Margin="0,0,10,0" Click="btnSubmit_Click"
                    Background="#3399ff"
                    Foreground="White"
                    BorderBrush="#2676c8"
                    FontWeight="Bold"
                    Height="36"
                    Cursor="Hand"
                    >
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#3399ff"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#2676c8"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="36"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2676c8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="btnCancel" Content="Hủy" Width="80" Click="btnCancel_Click"
                    Background="#f44336"
                    Foreground="White"
                    BorderBrush="#b71c1c"
                    FontWeight="Bold"
                    Height="36"
                    Cursor="Hand"
                    >
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#f44336"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#b71c1c"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="36"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#b71c1c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>