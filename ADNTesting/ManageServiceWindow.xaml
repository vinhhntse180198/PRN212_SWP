<Window x:Class="ADNTesting.ManageServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="ManageServiceWindow" Height="450" Width="800" Loaded="Window_Loaded"
        Background="#F9FAFB">
    <Grid>
        <!-- Label Header -->
        <Label Content="Dịch vụ" HorizontalAlignment="Left" Height="60" Margin="335,23,0,0" VerticalAlignment="Top"
               Width="172" FontSize="35" Foreground="#1F2937" FontWeight="Bold"/>

        <!-- Search box -->
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="33" Margin="22,92,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="347"
                 Background="White" Foreground="#111827" BorderBrush="#D1D5DB" Padding="4"/>

        <!-- Search button -->
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="411,88,0,0"
                VerticalAlignment="Top" Width="98" Height="36" Click="btnSearch_Click"
                Background="#3B82F6" Foreground="White" BorderThickness="0" FontWeight="Bold"/>

        <!-- DataGrid -->
        <DataGrid x:Name="dgv" HorizontalAlignment="Left" Height="238" Margin="22,160,0,0"
                  VerticalAlignment="Top" Width="626" AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Background="White" Foreground="#111827"
                  AlternatingRowBackground="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1" FontSize="14">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#374151"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="6,4"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ServiceId" Width="60" Binding="{Binding ServiceId}"/>
                <DataGridTextColumn Header="ServiceName" Width="100" Binding="{Binding ServiceName}"/>
                <DataGridTextColumn Header="Description" Width="*" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Price" Width="70" Binding="{Binding Price}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- CRUD Buttons -->
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="662,150,0,0"
                VerticalAlignment="Top" Width="106" Height="36" Click="btnCreate_Click"
                Background="#10B981" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="662,217,0,0"
                VerticalAlignment="Top" Width="106" Height="36" Click="btnUpdate_Click"
                Background="#F59E0B" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="662,296,0,0"
                VerticalAlignment="Top" Width="106" Height="36" Click="btnDelete_Click"
                Background="#EF4444" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
        <Button x:Name="btnQuit" Content="Quit" HorizontalAlignment="Left" Margin="662,362,0,0"
                VerticalAlignment="Top" Width="106" Height="36" Click="btnQuit_Click"
                Background="#6B7280" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
    </Grid>
</Window>
