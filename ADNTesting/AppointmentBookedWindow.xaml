<Window x:Class="ADNTesting.AppointmentBookedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="AppointmentBookedWindow" Height="450" Width="800" Loaded="Window_Loaded"
        Background="White">

    <Grid Margin="10">
        <Label Content="Theo dõi đơn"
               HorizontalAlignment="Left"
               Height="60"
               Margin="20,10,0,0"
               VerticalAlignment="Top"
               Width="300"
               FontSize="35"
               FontWeight="Bold"
               Foreground="#2C3E50"/>

        <TextBox x:Name="txtSearch"
                 HorizontalAlignment="Left"
                 Height="33"
                 Margin="20,90,0,0"
                 VerticalAlignment="Top"
                 Width="347"
                 Background="#F7F9F9"
                 BorderBrush="#BDC3C7"
                 BorderThickness="1"
                 Padding="5"/>

        <Button x:Name="btnSearch"
                Content="Tìm kiếm"
                HorizontalAlignment="Left"
                Margin="385,88,0,0"
                VerticalAlignment="Top"
                Width="100"
                Height="36"
                Background="#2C3E50"
                Foreground="White"
                FontWeight="SemiBold"
                BorderBrush="#2C3E50"
                Click="btnSearch_Click"/>

        <DataGrid x:Name="dgv"
                  HorizontalAlignment="Left"
                  Height="224"
                  Margin="20,140,0,0"
                  VerticalAlignment="Top"
                  Width="640"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Background="White"
                  BorderBrush="#D5D8DC"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="#F2F3F4"
                  HeadersVisibility="Column"
                  FontSize="13">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã đơn" Binding="{Binding AppointmentId}" Width="60"/>
                <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="100"/>
                <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Phone}" Width="100"/>
                <DataGridTextColumn Header="Dịch vụ" Binding="{Binding ServiceType}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Kết quả" Binding="{Binding ResultStatus}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnViewDetail"
                Content="Xem chi tiết"
                HorizontalAlignment="Left"
                Margin="680,150,0,0"
                VerticalAlignment="Top"
                Width="98"
                Height="36"
                Background="#2C3E50"
                Foreground="White"
                BorderBrush="#2C3E50"
                Click="btnViewDetail_Click"/>

        <Button x:Name="btnUpdate"
                Content="Cập nhật"
                HorizontalAlignment="Left"
                Margin="680,191,0,0"
                VerticalAlignment="Top"
                Width="98"
                Height="36"
                Background="#117A65"
                Foreground="White"
                BorderBrush="#117A65"
                Visibility="{Binding StaffButtonVisibility}"
                Click="btnUpdate_Click"/>

        <Button x:Name="btnQuit"
                Content="Quay lại"
                HorizontalAlignment="Left"
                Margin="680,232,0,0"
                VerticalAlignment="Top"
                Width="98"
                Height="36"
                Background="#B03A2E"
                Foreground="White"
                BorderBrush="#B03A2E"
                Click="btnQuit_Click"/>
    </Grid>
</Window>
