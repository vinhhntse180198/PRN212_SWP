<Window x:Class="ADNTesting.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="Hệ thống quản lý xét nghiệm ADN - Quản lý"
        Height="500" Width="820" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFEBF5FF" Offset="0"/>
                <GradientStop Color="#FFD4E9FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <TextBlock Text="Hệ thống quản lý xét nghiệm ADN"
                       FontSize="24" FontWeight="Bold"
                       Foreground="#1F2937"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtWelcome"
                       Text="Xin chào, Quản lý"
                       FontSize="18" Margin="0,10,0,0"
                       Foreground="#374151"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,50">
            <Button x:Name="btnManageServices" Width="180" Height="100" Margin="15" Click="btnManageServices_Click"
                    Background="#3B82F6" Foreground="White" BorderThickness="0" FontWeight="Bold">
                <StackPanel>
                    <TextBlock Text="Quản lý dịch vụ" FontSize="16" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnManageSampleTypes" Width="180" Height="100" Margin="15" Click="btnManageSampleTypes_Click"
                    Background="#10B981" Foreground="White" BorderThickness="0" FontWeight="Bold">
                <StackPanel>
                    <TextBlock Text="Quản lý loại mẫu" FontSize="16" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnManageTestPurposes" Width="180" Height="100" Margin="15" Click="btnManageTestPurposes_Click"
                    Background="#6366F1" Foreground="White" BorderThickness="0" FontWeight="Bold">
                <StackPanel>
                    <TextBlock Text="Quản lý mục đích" FontSize="16" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnManageTestCategories" Width="180" Height="100" Margin="15" Click="btnManageTestCategories_Click"
                    Background="#8B5CF6" Foreground="White" BorderThickness="0" FontWeight="Bold">
                <StackPanel>
                    <TextBlock Text="Quản lý danh mục" FontSize="16" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnManageKits" Width="180" Height="100" Margin="15" Click="btnManageKits_Click"
                    Background="#F59E0B" Foreground="White" BorderThickness="0" FontWeight="Bold">
                <StackPanel>
                    <TextBlock Text="Quản lý Kit" FontSize="16" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnViewAppointments" Width="180" Height="100" Margin="15" Click="btnViewAppointments_Click"
                    Background="#EC4899" Foreground="White" BorderThickness="0" FontWeight="Bold">
                <StackPanel>
                    <TextBlock Text="Xem lịch hẹn" FontSize="16" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnViewReports" Width="180" Height="100" Margin="15" Click="btnViewReports_Click"
                    Background="#22D3EE" Foreground="White" BorderThickness="0" FontWeight="Bold">
                <StackPanel>
                    <TextBlock Text="Xem báo cáo" FontSize="16" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                </StackPanel>
            </Button>
        </WrapPanel>

        <Button x:Name="btnQuit" Content="Đăng xuất"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Width="100" Height="30" Margin="0,0,20,20"
                Background="#EF4444" Foreground="White" FontWeight="Bold" BorderThickness="0"
                Click="btnQuit_Click"/>
    </Grid>
</Window>
